#!/usr/bin/env node

var program = require('commander');

program
	.option('-d, --drafts', 'Disable draft disabling')
	.option('-m, --missing-meta', 'Show missing meta')
	.option('-l, --broken-links', 'Show broken links')
	.option('-b, --beep', 'Emit a beep')
	.parse(process.argv);

global.cli = program;

require( '../scripts/metalsmith' );
